     <!-- This scrips handls the behaviour of the accordion. 
          For each "accordion" it creates an "click" event listener.
          If the panel is currently displayed, it hides the panel ("none")
          If the panel is currently not displayed, it shows the panel("display")-->
    <script>
      var acc = document.getElementsByClassName("accordion");
      var i;
       for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function() {
          this.classList.toggle("active");
          var panel = this.nextElementSibling;
          if (panel.style.display === "block") {
            panel.style.display = "none";
          } else {
            panel.style.display = "block";
          }
        });
      }
    </script>
